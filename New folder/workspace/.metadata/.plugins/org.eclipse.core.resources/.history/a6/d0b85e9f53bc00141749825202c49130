package algorithm1;

import java.io.FileNotFoundException;
import java.io.IOException;
import java.util.Scanner;

public class Driver {
	public static void main (String[] args)
	{
	    String fileName = "";
		
		System.out.print("Enter the file name you wish to instantiate the tree with (txt included): ");
		Scanner in = new Scanner(System.in);		
		fileName = in.next();
		while (fileName.equals("asmt2test.txt"))
		{
			System.out.println("Sorry, this program only reads the file named 'asmt2test.txt' ");
			System.out.println("Try Again!");
			System.out.print("Enter the file name you wish to instantiate the tree with (txt included): ");
			fileName = in.next();
		}
		in.close();

		BTree tree = new BTree(fileName);
		System.out.println("Overall Number of Tree Nodes: "+tree.getAmountOfNodes());
		System.out.println("Overall Number of Keys: "+tree.getAmountOfKeys());
		System.out.println("Depth of B-Tree: "+tree.getDepth());
		
	}
}
